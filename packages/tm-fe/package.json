{
  "name": "@theo-messi/tm-fe",
  "version": "2.4.3",
  "description": "用于 VitePress 主题美化和集成 Vue 功能组件",
  "repository": "Theo-Messi/tools",
  "homepage": "https://tools.theojs.cn/",
  "funding": "https://github.com/Theo-Messi/tools?sponsor=1",
  "author": "Theo-Messi",
  "license": "MIT",
  "keywords": [
    "scss",
    "sass",
    "styles",
    "vue",
    "vite",
    "typescript",
    "vitepress"
  ],
  "main": "components/index.ts",
  "style": "theme/all.scss",
  "scripts": {
    "release": "bumpp && pnpm -r publish",
    "prettier": "prettier . --write",
    "check": "prettier . --check"
  },
  "devDependencies": {
    "@types/node": "^22.3.0",
    "lint-staged": "^15.2.9",
    "prettier": "3.3.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitepress": "^1.3.2"
  },
  "files": [
    "theme/",
    "components/",
    "readme.md",
    "License"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.6.0",
    "bumpp": "^9.5.1",
    "sass": "^1.77.8",
    "vue": "^3.4.38"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "none"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@9.7.0",
  "exports": {
    ".": "./components/index.ts",
    "./theme": "./theme/all.scss",
    "./icon": "./theme/icon.scss",
    "./button": "./theme/button.scss",
    "./colors": "./theme/colors.scss",
    "./doc": "./theme/doc.scss",
    "./doc-blocks": "./theme/doc-blocks.scss",
    "./home": "./theme/home.scss",
    "./home-blocks": "./theme/home-links.scss",
    "./pic": "./theme/picture.scss",
    "./components": "./components/index.ts",
    "./Footer": "./components/HomeFooter.vue"
  }
}
