{
  "private": true,
  "repository": "Theo-Messi/tools",
  "homepage": "https://tools.theojs.cn/",
  "funding": "https://github.com/Theo-Messi/tools?sponsor=1",
  "author": "Theo-Messi",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -F=docs dev",
    "build": "pnpm -F=docs build",
    "preview": "pnpm -F=docs preview",
    "release": "pnpm -F=lumen release",
    "format": "prettier --write .",
    "format:cheak": "prettier --check ."
  },
  "devDependencies": {
    "lint-staged": "^15.2.9",
    "prettier": "3.3.3",
    "sass-embedded": "^1.77.8",
    "simple-git-hooks": "^2.11.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "none"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@9.7.1",
  "dependencies": {
    "pkg-pr-new": "^0.0.20"
  }
}
