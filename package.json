{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "Theo-Messi/tools",
  "homepage": "https://tools.theojs.cn/",
  "funding": "https://github.com/Theo-Messi/tools?sponsor=1",
  "author": "Theo-Messi",
  "license": "MIT",
  "scripts": {
    "release": "bumpp && pnpm -r publish",
    "dev": "vitepress dev docs --host",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs",
    "prettier": "prettier . --write",
    "check": "prettier . --check"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "lint-staged": "^15.2.8",
    "prettier": "3.3.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitepress": "^1.3.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@mdit/plugin-img-size": "^0.13.0",
    "bumpp": "^9.4.2",
    "sass": "^1.77.8",
    "vue": "^3.4.37"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "none"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@9.7.0"
}
